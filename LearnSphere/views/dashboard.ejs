<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - LearnSphere</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-indigo-50 via-white to-indigo-50 font-sans min-h-screen">

    <!-- Navbar -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a class="text-2xl font-bold text-indigo-700 hover:text-indigo-900 transition-colors" href="/dashboard">LearnSphere</a>
            <div class="flex items-center space-x-4">
                <span class="text-gray-700 font-medium">Welcome, <%= user.username %>!</span>
                <a href="/" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition-colors">
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto p-6">
        <h1 class="text-4xl font-bold text-gray-800 mb-8">Your Dashboard</h1>
        
        <% for (let year = 1; year <= 4; year++) { %>
            <div class="mb-10">
                <h2 class="text-2xl font-semibold mb-4 border-b-2 border-indigo-200 pb-2"><%= year %> Year Subjects</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    <% const yearSubjects = subjects.filter(s => s.year === year); %>
                    <% if (yearSubjects.length > 0) { %>
                        <% yearSubjects.forEach(subject => { %>
                            <a href="/subjects/<%= subject._id %>" class="block bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl hover:scale-105 transition-transform duration-300">
                                <h3 class="font-bold text-lg text-indigo-700 mb-2"><%= subject.name %></h3>
                                <p class="text-gray-500">Click to view materials & resources</p>
                            </a>
                        <% }) %>
                    <% } else { %>
                        <p class="text-gray-500">No subjects added for this year yet.</p>
                    <% } %>
                </div>
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer class="bg-white mt-10 shadow-inner">
        <div class="container mx-auto py-4 text-center text-gray-500">
            &copy; <%= new Date().getFullYear() %> LearnSphere. All rights reserved.
        </div>
    </footer>

</body>
</html>
